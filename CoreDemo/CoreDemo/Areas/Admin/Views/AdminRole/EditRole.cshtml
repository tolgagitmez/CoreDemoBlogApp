@using CoreDemo.Areas.Admin.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Rol ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rol Başlığı</label>
        <input type="text" name="name" value="@Model.name" class="form-control" />
    </div>

    <button class="btn btn-success">Rolü Güncelle</button>
    <div asp-validation-summary="ModeOnly"></div>
    <button class="btn btn-info">Kaydet</button>
</form>
